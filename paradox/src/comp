#!/bin/bash
echo Linking...
gcc -O -g -o rot act_comm.o act_enter.o act_info.o act_move.o act_obj.o act_wiz.o alias.o ban.o clans.o comm.o const.o curse.o db.o db2.o effects.o fight.o flags.o forget.o handler.o healer.o interp.o note.o lookup.o magic.o magic2.o music.o recycle.o repent.o save.o scan.o sign.o skills.o special.o tables.o update.o wizlist.o mob_cmds.o mob_prog.o olc.o olc_act.o olc_save.o bit.o mem.o string.o olc_mpcode.o mdice.o copyover.o quest.o banks.o auction.o /usr/lib/libcrypt.a
echo Copying...
cp rot ../area/rot
echo Backing up *.c...
cp *.c ../2src/
echo Backing up *.h...
cp *.h ../2src/
echo Backing up Makefile...
cp Makefile ../2src/
echo Done.
